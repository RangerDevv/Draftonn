---
import Layout from "../layouts/Layout.astro"
---
<Layout title="ClassComrade">
    <div class="flex flex-col gap-3">
        <h1 class="text-center text-5xl text-gradient font-bold">ClassComrade</h1>
        <h2 class="text-center text-2xl">Class doesn't need to be a struggle.</h2>
        <div class="flex justify-center">
			<a href="/login" class="bg-red-500 text-center p-2 rounded-md mr-4 text-white w-36">
				Login
			</a>
			<a href="/signup" class="bg-red-500 text-center p-2 rounded-md text-white w-36">
				Sign up
			</a>
		</div>
    </div>
</Layout>
<style>
    .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>