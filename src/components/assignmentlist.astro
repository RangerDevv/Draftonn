---
function prettyDate(date: string) {
    let d = new Date(date)
    if(d.toDateString() === new Date().toDateString()) {
        return "Today"
    } else if (d.toDateString() === new Date(Date.now() - 864e5).toDateString()) {
        return "Yesterday"
    } else {
        return d.toLocaleDateString()
    }
}

let { day } = Astro.props
---

<h1 class="text-xl sm:text-2xl 2xl:text-4xl text-center">{prettyDate(day[0].$createdAt)}</h1>
<div class="flex flex-col items-center w-full gap-y-5">
    {day.map((assignment: any) =>(
        <div onclick={`window.location = "./helpinghand/assignment/${assignment.$id}"`} style="cursor: pointer;" class="card w-[26rem] sm:w-7/12 h-24 sm:h-20 bg-slate-300">
            <div class="text-xl items-center justify-center">
                <h1 class="text-xl pt-[5%] sm:pt-5 text-center">{assignment.Name}</h1>
            </div>
        </div>
    ))}
</div>